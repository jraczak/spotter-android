<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.spotterapp.android.spotter">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ListWorkouts"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewExercise"
            android:label="@string/title_activity_new_exercise"
            android:parentActivityName=".ListWorkouts">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.spotterapp.android.spotter.ListWorkouts" />
        </activity>
        <activity
            android:name=".NewProgram"
            android:label="@string/title_activity_new_program"
            android:parentActivityName=".ListWorkouts">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.spotterapp.android.spotter.ListWorkouts" />
        </activity>
        <activity
            android:name=".ListPrograms"
            android:label="@string/title_activity_list_programs"
            android:parentActivityName=".ListWorkouts">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.spotterapp.android.spotter.ListWorkouts" />
        </activity>
        <activity
            android:name=".ViewProgram"
            android:label="@string/title_activity_view_program"
            android:parentActivityName=".ListPrograms">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.spotterapp.android.spotter.ListPrograms" />
        </activity>
    </application>

</manifest>
